<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivImagenPais"
        android:layout_width="193dp"
        android:layout_height="126dp"
        android:contentDescription="paises"
        app:srcCompat="@drawable/ro" />

    <TextView
        android:id="@+id/tvNombrePais"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/ivImagenPais"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/ivImagenPais"
        android:layout_toRightOf="@+id/ivImagenPais"
        android:gravity="center"
        android:text="Rumania"
        android:textSize="30sp" />
</RelativeLayout>